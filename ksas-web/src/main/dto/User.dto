export io.github.llh4github.ksas.dbmodel.auth.User

import io.github.llh4github.ksas.commons.PageQueryParam

input UserAddInput{
    username
    password
    nickname
    roles{
        id
    }
}

input UserUpdateInput{
    id
    username
    password
    nickname
    roles{
        id
    }
}

input UserUpdateRoleInput{
    id
   id(roles) as roleIds
}
specification UserQuerySpec {
    like/i(username)
    like/i(nickname)
    pageParam: PageQueryParam
}

UserBaseView{
    #allScalars
    -password
    roles{
        id
        code
        title
    }
    createdByUser{
        id
        username
    }
    updatedByUser{
        id
        username
    }
}

UserLoginView{
    username
    password
}

input UserUpdatePwdInput{
    id!
    password
}

UserAuthView{
    id
    username
    password
    roles{
        code
        endpointPerms{
           permCode
        }
    }
}

UserEndpointPermView{
    id
    username
    roles{
        code
        endpointPerms{
            path
            method

        }
    }
}

input UserRestPwdInput{
    id!
    password
}
